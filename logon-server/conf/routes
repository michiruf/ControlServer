# ~~~~~~~~~~~~~
# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~~~~~~~~~~

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                   controllers.Assets.at(path="/public", file)

# Websocket
GET         /ws                             controllers.WebsocketController.socket

# User
GET         /register                       controllers.UserController.register
POST        /register                       controllers.UserController.doRegister()
GET         /register-success               controllers.UserController.doneRegister
GET         /forgot-password                controllers.UserController.forgotPassword
POST        /forgot-password                controllers.UserController.doForgotPassword()
GET         /forgot-password-success        controllers.UserController.doneForgotPassword

# Contact
GET         /contact                        controllers.ContactController.index
POST        /contact                        controllers.ContactController.send

# Show the start page and catch all remaining requests to show pages
GET         /                               controllers.PagesController.index
GET         /*page                          controllers.PagesController.show(page: String)
