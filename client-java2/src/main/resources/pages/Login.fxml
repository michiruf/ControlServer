<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<BorderPane
        xmlns="http://javafx.com/javafx/8"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="de.michiruf.control_server.client_java.ui.pages.LoginController"
        visible="true"> <!-- TODO -->
    <top>
        <fx:include source="../include/Logo.fxml"/>
    </top>

    <center>
        <VBox>
            <fx:define>
                <ToggleGroup fx:id="positionToggleGroup"/>
            </fx:define>
            <padding>
                <Insets bottom="25" left="25" right="25" top="25"/>
            </padding>

            <Label text="Host" labelFor="$hostInput"/>
            <TextField fx:id="hostInput"/>

            <Pane prefHeight="15"/>

            <Label text="Port" labelFor="$portInput"/>
            <TextField fx:id="portInput"/>

            <Pane prefHeight="25"/>

            <RadioButton text="Relative positioning" toggleGroup="$positionToggleGroup"/>
            <Pane prefHeight="5"/>
            <RadioButton text="Absolute positioning" toggleGroup="$positionToggleGroup"/>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER">
            <padding>
                <Insets bottom="25" left="25" right="25" top="25"/>
            </padding>
            <Button text="Save" onAction="#onLogin"/>
        </HBox>
    </bottom>
</BorderPane>
